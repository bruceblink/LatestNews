generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user_info {
  id           BigInt   @id @default(autoincrement())
  email        String?  @db.VarChar(255) // 可空，不再唯一
  username     String?  @unique @db.VarChar(100)
  password     String?
  display_name String?  @db.VarChar(255)
  avatar_url   String?
  provide_id   String? // 用于存放第三方登录的id
  type         String?  @db.VarChar(100) // 如果需要，也可以唯一约束
  data         Json? // 用于存储第三方用户数据
  created_at   DateTime @default(now()) @db.Timestamptz(6)
  updated_at   DateTime @default(now()) @db.Timestamptz(6)

  @@unique([type, provide_id], name: "type_provide_id")
}

model cache {
  id         String   @id
  data       Json
  created_at DateTime @default(now()) @db.Timestamptz(6)
  updated_at DateTime @default(now()) @db.Timestamptz(6)
}
